{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": ".next",
    "baseUrl": ".",
    "paths": {
      "ui-kit": ["../../packages/ui-kit/src"],
      "ui-kit/*": ["../../packages/ui-kit/src/*"],
      "domain/*": ["../../packages/domain/src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "src/**/*", "../../packages/ui-kit/src/**/*"],
  "exclude": ["node_modules"]
}
