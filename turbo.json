{
  "$schema": "https://turborepo.org/schema.json",

  "tasks": {
    "lint": {
      "outputs": []
    },

    "clean": {
      "cache": false
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "apps/**/.next/**"
      ]
    },

    "dev": {
      "cache": false
    }
  }
}